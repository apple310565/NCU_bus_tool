<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/test_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="中央大學圖書館"
                android:layout_marginLeft="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:background="@drawable/rectangle_border"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_biking_solid"
                            android:layout_gravity="center"
                            android:layout_marginRight="3dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rent_bike_title"
                            android:textColor="@color/green"
                            android:textSize="15dp"  />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/AvailableRentBikes1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="30"
                        android:textSize="@dimen/bike_number_textsize"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:clickable="true" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:background="@drawable/rectangle_border"
                    android:padding="10dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_parking_solid"
                            android:layout_gravity="center"
                            android:layout_marginRight="3dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/return_bike_title"
                            android:textColor="@color/green"
                            android:textSize="15dp"  />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/AvailableReturnBikes1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="15"
                        android:textSize="@dimen/bike_number_textsize"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:clickable="true" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="5dp" >
                <TextView
                    android:id="@+id/ServiceStatus1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正常營運"
                    android:background="@drawable/rectangle_border_regular"
                    android:padding="5dp"
                    android:textColor="@color/teal_700" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true" >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_map_marker_alt_solid"
                        android:layout_marginRight="3dp" />
                    <TextView
                        android:id="@+id/PlaceDiff1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="距離 - - - 公尺" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="中央大學依仁堂"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight=".50"
                    android:background="@drawable/rectangle_border"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="3dp"
                            android:src="@drawable/ic_biking_solid" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rent_bike_title"
                            android:textColor="@color/green"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/AvailableRentBikes2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="30"
                        android:textAlignment="center"
                        android:textSize="@dimen/bike_number_textsize"
                        android:textStyle="bold"
                        android:clickable="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight=".50"
                    android:background="@drawable/rectangle_border"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="3dp"
                            android:src="@drawable/ic_parking_solid" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/return_bike_title"
                            android:textColor="@color/green"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/AvailableReturnBikes2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="15"
                        android:textAlignment="center"
                        android:textSize="@dimen/bike_number_textsize"
                        android:textStyle="bold"
                        android:clickable="true" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ServiceStatus2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle_border_regular"
                    android:padding="5dp"
                    android:text="正常營運"
                    android:textColor="@color/teal_700" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="3dp"
                            android:src="@drawable/ic_map_marker_alt_solid" />

                        <TextView
                            android:id="@+id/PlaceDiff2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="距離 - - - 公尺" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="租用YouBike需持電子票證（悠遊卡、一卡通）於官網或各站的KIOSK自動服務機註冊會員，即可靠卡感應租車。目前桃園市YouBike會員租用費率為前30分鐘內免費；每2小時內每30分鐘10元；2至4小時內每30分鐘20元；4小時以上，每30分鐘40元。"
            android:layout_marginHorizontal="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top">
            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:text="悠遊卡消費紀錄查詢" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>